{{#if isSecondary}}
  {{#foreach navigation}}
  <li class="{{link_class for=(url) class=(concat "nav-" slug)}}"><a href="{{url absolute="true"}}">{{label}}</a></li>
  {{/foreach}}
{{else}}
  {{#foreach navigation}}
  <li class="nav-{{slug}} {{#if current}}active{{/if}}"><a href="{{url absolute="true"}}">{{label}}</a></li>
  {{/foreach}}
{{/if}}