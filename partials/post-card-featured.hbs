<article class="banner">
    <div class="content">
        <header>
            <div class="post-card-date">{{date published_at format="MMM D, YYYY"}} ({{date published_at timeago="true"}})</div>
            <h3><a href="{{url}}">{{title}}</a></h3>
            <p><em>{{reading_time}}</em> {{#if custom_excerpt}}&ndash; {{custom_excerpt}}{{/if}}</p>
        </header>

        {{#if tags}}
        <span class="tags post-card-tags">
            {{#foreach tags}}
            <div class="chip">
                <a href="{{url}}" title="{{name}}" class="achip tag tag-{{id}} {{slug}}"><div class="chip-content">{{name}}</div></a>
            </div>
            {{/foreach}}
        </span>
        {{/if}}

